  
<% if current_user.like?(workoutlog) %>
  <%= form_with(model: current_user.favorites.find_by(workoutlog_id: workoutlog.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :workoutlog_id, workoutlog.id %>
    <%= f.submit 'お気に入りから削除', class: 'btn btn-dark btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :workoutlog_id, workoutlog.id %>
    <%= f.submit 'お気に入りに登録', class: 'btn btn-info btn-sm' %>
  <% end %>
<% end %>